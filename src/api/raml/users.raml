/me:
  get:
    is: [auth: { roles: 'user' }]
    description: Obtenir mon profil d'utilisateur.
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "_id": "558d4dfda91e997c16c3c44e",
                "name": "Admin Admin",
                "email": "admin@admin.com",
                "age": 22,
                "gender": "homme",
                "phone": "+41 000 00 00",
                "mobile": "+41 000 00 01",
                "city": "Neuchâtel",
                "street": "Avenue du Premier Mars 1",
                "canton": "NE",
                "zip": 2000,
                "imageProfileUrl": "userPlaceholder.png",
                "roles": [
                  "user",
                  "staff",
                  "manager"
                ],
                "staffId": "558d5010a91e997c16c3c457",
                "preferences": {
                  "homeDisplay": "list"
                }
              }
  put:
    is: [auth: {roles: 'user'} ]
    description: Mettre à jour mon profil d'utilisateur.
    body:
      application/json:
        example: |
          {
            "phone": "+41 000 00 00"
            "mobile": "+41 000 00 00"
            "imageProfileURL": "image.png"
            "zip": "2000"
            "city": "Neuchâtel"
            "canton": "NE"
            "street": "Avenue du Premier Mars 1"
          }
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "message": "Profil utilisateur modifié avec succès."
              }

/{userId}:
