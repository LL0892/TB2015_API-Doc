            example: |
              {
                "utilisateur": {
                  "_id": "558d4dfda91e997c16c3c44e",
                  "name": "Admin Admin",
                  "email": "admin@admin.com",
                  "age": 22,
                  "gender": "homme",
                  "phone": "+41 000 00 00",
                  "mobile": "+41 000 00 00",
                  "city": "Neuchâtel",
                  "street": "Avenue du Premier Mars 1",
                  "canton": "NE",
                  "zip": 2000,
                  "imageProfileUrl": "userPlaceholder.png"
                }
              }

  delete:
    is: [auth: {roles: 'admin'} ]
    description: Supprimer un utilisateur spécifique.
    responses:
      204:
        body:

/{userId}/password:
  put:
    is: [auth: {roles: 'user'} ]
    description: Modifier mon mot de passe.
    body:
      application/json:
        example: |
          {
            "oldPassword": "oldpass",
            "newPassword": "newpass"
          }
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "message": "Votre mot de passe a été changé avec succès."
              }

/{userId}/email:
  put:
    is: [auth: {roles: 'user'} ]
    description: Modifier mon adresse email.
    body:
      application/json:
        example: |
          {
            "email": "new@email.com"
          }
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "message": "Votre email a été changé avec succès."
              }

/{userId}/prefFavorite:
  put:
    is: [auth: {roles: 'user'} ]
    description: Mettre à jour mon salon favori.
    body:
      application/json:
        example: |
          {
            "favorite" : "55894f7134f23c9410420f73"
          }
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "message" : "Votre salon favoris ont été mit à jours avec succès."
              }